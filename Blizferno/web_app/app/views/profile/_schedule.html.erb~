		{name:"description", height:50, map_to:"title", type:"textarea",focus:true},
		{name:"eventType", height:50, options: event_type, map_to: "radiobutton_option", type:"radio", vertical:true},
		{name:"time", height:50, type:"time", map_to:"auto"}
		];

*/



scheduler.attachEvent("onEventSave",function(id,data){

	var postId = userId;
	var postTitle = data.text;
	var postLocation = "testlocation";
	var postDateTimeBegin = "01/21/2014 00:05";
	var postDateTimeEnd = "01/22/2014 10:02";
	var postDescription = data.text;
	var postAttendance = new Array();


	var postData = "{userID:\'"+postId+"\', title:\'"+ postTitle+"\', location:\'"+postLocation+"\', datetime:\'"+postDateTimeBegin+"\',endDatetime:\'"+postDateTimeEnd+"\',description:\'"+postDescription+"\', attendance:"+postAttendance+"}";



	$.ajax({
		type: "POST",
		url: "http://csse371-04.csse.rose-hulman.edu/Meeting/",
		data: postData
	});

//alert("Save");
    return true;
});




		scheduler.init('scheduler_here',new Date(),"month");
		/*
