<script class="cssdeck" src="jquery.min.js"></script>
<script type="text/javascript">
    (function ($) {
        // constants
        var SHOW_CLASS = 'show',
        HIDE_CLASS = 'hide',
        ACTIVE_CLASS = 'active';

        $('.tabs').on('click', 'li a', function (e) {
            e.preventDefault();
            var $tab = $(this),
            href = $tab.attr('href');

            $('.active').removeClass(ACTIVE_CLASS);
            $tab.addClass(ACTIVE_CLASS);

            $('.show')
            .removeClass(SHOW_CLASS)
            .addClass(HIDE_CLASS)
            .hide();

            $(href)
            .removeClass(HIDE_CLASS)
            .addClass(SHOW_CLASS)
            .hide()
            .fadeIn(550);

            if(href == '#register'){
                $('.flat-form').animate({height:480},550);
            }else{
                $('.flat-form').animate({height:410},550);
            }
            
        });
    })(jQuery);
</script>

