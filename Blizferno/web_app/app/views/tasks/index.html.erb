        type="text/javascript"></script>
<script>

<%= render "tasksJS.js.erb" %>

$(window).load(function() {
	jQuery('#createTask').bind('submit', function(event){
		event.preventDefault();
alert("here");

		var form = this;
		var formJSON = new ConvertFormToJSON(form);

		var postTitle = "testTitle";
