<!-- GROUPS -->
<!-- Create Modal -->
<div class="modal fade" id="newGroupModal" tabindex="-1" role="dialog" aria-labelledby="newGroupModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1 class="modal-title" id="newGroupModalLabel">Create Group</h1>
      </div>
      <div class="modal-body">
        <%= render "groups/new" %>
      </div>
      <div class="modal-footer">
        <button type="button" id='cCrGrp' class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" id='sCrGrp' class="btn btn-primary" onclick='submitCreateGroupModal()'>Submit</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

