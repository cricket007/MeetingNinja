<div class="accordian-group" id="accordion">
  <!-- TASK PANEL -->
  <div class="panel panel-default">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
      <input type='button' class="btn btn-danger panel-title" value='Tasks'>
    </a>
    <div id="collapseOne" class="panel-collapse collapse">
      <div class="panel-body">
        <table class='table table-hover table-striped' style='width: 70%; margin-left: 15%; margin-right: auto;'>
          <thead>
            <tr >
              <th>Due</th>
              <th>Task Name</th>
              <th>Completion Criteria</th>
            </tr>
          </thead>
          <tr>
            <td colspan='4' style='cursor: pointer; text-align: center' href='#newTaskModal' data-toggle='modal'><span style='font-size: 1.3em; color: white;' class='glyphicon glyphicon-plus'></span><span style='font-size: 1.1em; color: white;'>  Create New</span></td>
          </tr>
          <% counter = 0; max = @taskVal.to_i; seenTasks = []; %>
          <% for task in @tasksParsed %>
            <% if counter >= max %>
              <% break %>
            <% elsif seenTasks.include? task['taskID'] %>
              <% next %>
            <% else %>
              <tr>
                <td><%= task['deadline'] %></td>
                <td><%= task['title'] %></td>
                <td><%= task['completionCriteria'] %></td>
              </tr>
              <% seenTasks.push(task['taskID']) %>
              <% counter = counter + 1 %>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <!-- PROJECTS PANEL -->
  <div class="panel panel-default">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
      <input type='button' class="btn btn-warning panel-title" value='Projects'>
    </a>
    <div id="collapseTwo" class="panel-collapse collapse">
      <div class="panel-body">
        <table class='table table-striped' style='width: 70%; margin-left: 15%; margin-right: auto;'>
          <thead>
            <tr >
              <th>Name</th>
            </tr>
          </thead>
          <tr>
            <td colspan='4' style='cursor: pointer; text-align: center' href='#newProjectModal' data-toggle='modal'><span style='font-size: 1.3em; color: white;' class='glyphicon glyphicon-plus'></span><span style='font-size: 1.1em; color: white;'>  Create New</span></td>
          </tr>
          <% counter = 0; max = @projectVal.to_i; %>
          <% for project in @projectsParsed; if counter >= max; break; end; %>
          <tr>
            <td><%= project['projectTitle'] %></td>
          </tr>
          <% counter = counter + 1 %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <!-- MEETINGS PANEL -->
  <div class="panel panel-default">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseMeetings">
      <input type='button' class="btn btn-success panel-title" value='Meetings' />
    </a>
    <div id="collapseMeetings" class="panel-collapse collapse in">
      <div class="panel-body">
        <table class='table table-striped' style='width: 70%; margin-left: 15%; margin-right: auto;'>
          <thead>
            <tr>
              <th>Date</th>
              <th>Title</th>
              <th>Where</th>
            </tr>
          </thead>
          <tr>
            <td colspan='5' style='cursor: pointer; text-align: center' href='#newMeetingModal' data-toggle='modal'><span style='font-size: 1.3em; color: white;' class='glyphicon glyphicon-plus'></span><span style='font-size: 1.1em; color: white;'>  Create New</span></td>
          </tr>
          <% counter = 0; max = @meetingVal.to_i; %>
          <% for meeting in @meetingsParsed; if counter >= max; break; end; %>

          <tr>
            <td><%= meeting['datetime'] %></td>
            <td><%= meeting['title'] %></td>
            <td><%= meeting['location'] %></td>
          </tr>

          <% counter = counter + 1 %>
          <% end %>
        </table>

      </div>
    </div>
  </div>
  <!-- GROUPS PANEL -->
  <div class="panel panel-default">
    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
      <input type='button' class="btn btn-info panel-title" value='Groups'>
    </a>
    <div id="collapseFour" class="panel-collapse collapse">
      <div class="panel-body">
        <table class='table table-striped' style='width: 70%; margin-left: 15%; margin-right: auto;'>
          <thead>
            <tr>
              <th>Group Name</th>
            </tr>
          </thead>
          <tr>
            <td colspan='4' style='cursor: pointer; text-align: center' onclick="showNewGroupModal('<%=@allUsers%>','Modal')" data-toggle='modal'><span style='font-size: 1.3em; color: white;' class='glyphicon glyphicon-plus'></span><span style='font-size: 1.1em; color: white;'>  Create New</span></td>
          </tr>
          <% counter = 0; max = @groupVal.to_i; %>
          <% for group in @groups; if counter >= max; break; end; %>
          <tr>
            <td><%= group['groupTitle'] %></td>
          </tr>
          <% counter = counter + 1 %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
