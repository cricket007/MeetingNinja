# This folder does not require access over HTTP
# (the following directive denies access by default)
Options +FollowSymLinks
RewriteEngine On

#Reroute Notification to old way
RewriteRule ^Notification/?$ Notification.php [NC,L]
RewriteRule ^Notification/([0-9]+)/?$ Notification.php?id=$1 [NC,L]

#Reroute Schedules to old way
RewriteRule ^User/Schedule/([0-9]+)/?$ User.php?cat=schedule&id=$1 [NC,L]
RewriteRule ^User/Schedules/?$ User.php?cat=schedule [NC,L]

# Standard POST/PUT Request
RewriteRule ^([A-Za-z]+)/$ Controller.php?class1=$1 [NC,L]
# Standard GET/DELETE Request
RewriteRule ^([A-Za-z]+)/([0-9]+)$ Controller.php?class1=$1&id1=$2 [NC,L]
# Standard GET/DELETE Request with a slash at the end
RewriteRule ^([A-Za-z]+)/([0-9]+)/$ Controller.php?class1=$1&id1=$2 [NC,L]
# Request with 2 classes and no id
RewriteRule ^([A-Za-z]+)/([A-Za-z]+)/$ Controller.php?class1=$1&class2=$2&id1=null&id2=null [NC,L]
# Request with 2 classes and 1 id
RewriteRule ^([A-Za-z]+)/([A-Za-z]+)/([0-9]+)/?$ Controller.php?class1=$1&class2=$2&id1=$3&id2=null [NC,L]
# Request with 2 classes and 2 ids
RewriteRule ^([A-Za-z]+)/([A-Za-z]+)/([0-9]+)/([0-9]+)/?$ Controller.php?class1=$1&class2=$2&id1=$3&id2=$4 [NC,L]
