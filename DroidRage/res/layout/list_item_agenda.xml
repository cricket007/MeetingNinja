<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemContainerBase"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:padding="2dip" >

    <EditText
        android:id="@+id/agenda_edit_topic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Title"
        android:inputType="textCapSentences"
        android:padding="4dip"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/agenda_topic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/agenda_subtopicAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/button_selector"
        android:minHeight="24dp"
        android:padding="4dip"
        android:text="New Subtopic"
        android:textColor="#FF777777"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/agenda_topicOptionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_transparent_holo_light"
        android:contentDescription="@string/descr_overflow_button"
        android:padding="4dip"
        android:src="@drawable/ic_action_overflow_holo_light" />

</LinearLayout>